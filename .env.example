# Example environment variables for Testing Harness
# Copy this file to .env and modify as needed

# Model configuration
HARNESS_MODEL=llama3.2:latest
HARNESS_BASE_URL=http://localhost:11434
HARNESS_TEMPERATURE=0.0

# Runner configuration
HARNESS_MAX_WORKERS=4
HARNESS_BATCH_SIZE=5

# Output configuration
HARNESS_OUTPUT_DIR=results
HARNESS_OUTPUT_FORMAT=json

# Logging configuration
HARNESS_LOG_LEVEL=INFO
HARNESS_VERBOSE=false

# Advanced settings
HARNESS_MAX_RETRIES=4
HARNESS_RETRY_DELAY=2.0
HARNESS_RATE_LIMIT_DELAY=1.0